<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!-- PostgreSQL настройки для taxi_db -->
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/taxi_db</property>
        <property name="hibernate.connection.username">taxi_user</property>
        <property name="hibernate.connection.password">***СКРЫТО***</property>

        <!-- <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property> -->

        <property name="hibernate.hbm2ddl.auto">update</property>

        <!-- Настройки пула соединений -->
        <property name="hibernate.connection.pool_size">10</property>

        <!-- Показывать SQL запросы (для разработки) -->
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>

        <!-- Кодировка -->
        <property name="hibernate.connection.characterEncoding">UTF-8</property>
        <property name="hibernate.connection.useUnicode">true</property>

        <property name="hibernate.jdbc.batch_size">20</property>
        <property name="hibernate.order_inserts">true</property>
        <property name="hibernate.order_updates">true</property>
        <property name="hibernate.jdbc.fetch_size">50</property>
        <property name="hibernate.jdbc.time_zone">UTC</property>

        <!-- Указываем entity классы -->
        <mapping class="com.taxi.entity.Driver"/>
        <mapping class="com.taxi.entity.Car"/>
        <mapping class="com.taxi.entity.MedicalCheck"/>
        <mapping class="com.taxi.entity.Order"/>
        <mapping class="com.taxi.entity.TechnicalInspection"/>
        <mapping class="com.taxi.entity.User"/>
        <mapping class="com.taxi.entity.Waybill"/>
    </session-factory>
</hibernate-configuration>